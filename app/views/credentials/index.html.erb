<p id="notice"><%= notice %></p>

<h1>Credentials</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Project environment</th>
      <th>Provider name</th>
      <th>Url</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @credentials.each do |credential| %>
      <tr>
        <td><%= credential.name %></td>
        <td><%= credential.project_environment %></td>
        <td><%= credential.provider_name %></td>
        <td><%= credential.URL %></td>
        <td><%= credential.role %></td>
        <td><%= link_to 'Show', credential %></td>
        <td><%= link_to 'Edit', edit_credential_path(credential) %></td>
        <td><%= link_to 'Destroy', credential, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Credential', new_credential_path %>
