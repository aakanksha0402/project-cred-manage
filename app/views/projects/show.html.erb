  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
        <h5 class="title">Create Environment</h5>
      </div>
      <div class="card-body">
        <%= render 'project_environments/form', project_environment: @project_environment %>
      </div>
    </div>
  </div>
